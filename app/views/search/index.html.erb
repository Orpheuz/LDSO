<div class="container">
  <%= form_tag search_path, :method => :get do %>
  <h1> Search </h1>
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="input-group">
            <div class="input-group-addon">
              <span style="weight: 110px;">Name</span>
            </div>
            <%= text_field_tag :name, params[:name], class: "form-control"%>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="input-group">
            <div class="input-group-addon">
              <span style="weight: 110px;">Tags</span>
            </div>
            <div class="all-tags">
              <input name="tags[]" class="form-control" id="searchTag1" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="input-group">
            <div class="input-group-addon">
              <span style="weight: 110px;">Ingredients</span>
            </div>
            <div class="all-ing">
              <input name="searchIng[]" class="form-control" id="searchIng1" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <div class="input-group">
            <div class="input-group-addon">
              <span style="weight: 110px;">Time</span>
            </div>
            <%= number_field_tag(:number, params[:number],:value =>60, in: 0.0..500.0, step: 1, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-6">
          <span>Difficulty</span>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>Easy</li>
              <li>Intermediate</li>
              <li>Hard</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="btn-search-div">
        <%= submit_tag "Search", :name => nil, :id => "btn-search", class: "btn-std-recipe" %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <h1>Recipes</h1>
    </div>
    <div class="col-md-12">
      <%= @diff %>
      <ul>
        <% if @recipes.present? %>
        <% @recipes.each do |recipe| %>
        <div id="profile-img-content">
         <% if @recipes.present? %>
         <% @recipes.each do |recipe| %>
         <%= link_to image_tag(recipe.media, :class => "recipe-image-profile inline-block", :rel => "tooltip", :title => recipe.name), recipe_path(recipe) %>
         <% end %>
         <% else %>
         <h2> No recipes yet! </h2>
         <% end %>
       </div>
       <% end %>
       <% else %>
       <h3> No results to show </h3>
       <% end %>
     </ul>
   </div>
 </div>
</div>