<%= form_tag search_path, :method => :get do %>

<div class="row">
  <div class="col-xs-6">
    <div class="input-group">
      <div class="input-group-btn">
        <%= hidden_field_tag 'SCN' ,'Name' %>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="search-choice-btn">Name</button>
        <ul class="dropdown-menu">
          <li><a href="#" id="search-choice-opt" class="search-choice">Tag</a></li>
        </ul>
      </div><!-- /btn-group -->
      <%= text_field_tag :search, params[:search], class: "form-control"%>
    </div>
  </div>
  <div class="col-xs-1">
    <%= number_field_tag(:number, params[:number],:value =>60, in: 0.0..500.0, step: 1, class: "form-control") %>
  </div>
  <div class="col-xs-3">
    <legend>Difficulty:</legend>
    <select class="selectpicker" name="difficulty">
      <option>Easy</option>
      <option>Average</option>
      <option>Hard</option>
    </select>
  </div>
  <%= submit_tag "Search", :name => nil,class: "btn btn-default" %>
</div>
<% end %>
<div id="facets">
  <h3>Recipes</h3>
  <%= @diff %>
  <ul>
    <% @recipes.each do |recipe| %>
    <li>
      <strong>
        <%=link_to recipe.name, recipe %>
      </strong>
      <%= recipe.description %>
      <%= recipe.time%>
    </li>
    <% end %>
  </ul>
</div>
