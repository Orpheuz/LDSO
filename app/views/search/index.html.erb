<%= form_tag search_path, :method => :get do %>

    <div class="row">
      <div class="col-xs-6">
        <div class="input-group">
            <div class="input-group-addon">
              <span id="search-ing-btn">Name</span>
            </div>
          <%= text_field_tag :name, params[:name], class: "form-control"%>
        </div>

      </div>
      <div class="col-xs-1">
        <%= number_field_tag(:number, params[:number],:value =>60, in: 0.0..500.0, step: 1, class: "form-control") %>
      </div>
      <div class="col-xs-3">
        <legend>Difficulty:</legend>
        <select class="selectpicker" name="difficulty">
          <option>Easy</option>
          <option>Average</option>
          <option>Hard</option>
        </select>
      </div>
      <%= submit_tag "Search", :name => nil,class: "btn btn-default" %>
    </div>

    <div class="row">
      <div class="col-xs-6">
        <div class="input-group">
          <div class="input-group-addon">
            <span id="search-ing-btn">Tags</span>
          </div>
          <div class="all-tags">
            <input name="tags[]" class="form-control" id="searchTag1" />
          </div>
          <div class="input-group-btn">
            <button type="button" class="btn btn-default" id="add-tag"><span class="glyphicon glyphicon-plus"></span></button>
          </div>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-xs-6">
        <div class="input-group">
          <div class="input-group-addon">
            <span id="search-ing-btn">Ingredients</span>
          </div>
          <div class="all-ing">
            <input name="searchIng[]" class="form-control" id="searchIng1" />
          </div>
          <div class="input-group-btn">
            <button type="button" class="btn btn-default" id="add-ingredient"><span class="glyphicon glyphicon-plus"></span></button>
          </div>
        </div>
      </div>
    </div>

<% end %>
<div id="facets">
  <h3>Recipes</h3>
  <%= @diff %>
  <ul>
    <% @recipes.each do |recipe| %>
        <li>
          <strong>
            <%=link_to recipe.name, recipe %>
          </strong>
          <%= recipe.description %>
          <%= recipe.time%>
        </li>
    <% end %>
  </ul>
</div>
