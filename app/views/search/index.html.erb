<%= form_tag search_path, :method => :get do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  <%= number_field(:number, params[:number],:value =>60, in: 0.0..500.0, step: 1) %>
</p>
<% end %>
<div id="facets">
  <h3>Published</h3>
  <ul>
    <% for recipe in @recipes  %>
    <li>
      <strong>
        <%=link_to recipe.name, recipe %>
      </strong>
      <%= recipe.description %>
      <%= recipe.time%>
    </li>
    <% end %>
  </ul>
</div>
