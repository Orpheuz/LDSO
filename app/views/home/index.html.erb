<div class="list-group panel col-md-1" id="cat-bar">
	<a href="#cats" class="list-group-item list-group-item-success" id="cat_men" data-toggle="collapse" >Categories</a>
	<div class="collapse" id="cats">
		<% @categories.each do |category| %>

		<%=link_to category.name , category ,class: "list-group-item cat_name"  %>

		<% end %>
	</div>
</div>


<% if current_user %>
<div class ='list-group col-md-8 col-md-offset-2'>


	<div class="container">
		<div class="container-feed row cold-md">
			<% for activity in @activities %>
			<div class="col-md-8">
				<% if activity['verb'] == 'Recipe' %>
				<%= link_to activity['actor'].slug , activity['actor'] %>
				<%= " create a new recipe called \'"  %>
				<%= link_to activity['object'].name , activity['object']%>
				<%= "\'" %>
				<a href="#" class="thumbnail">
					<%= image_tag(activity['object'].image, :alt => activity['object']) %>
				</a>
				<% end %>
				<% if activity['verb'] == 'Follow' %>
				<%= link_to activity['actor'].slug , activity['actor'] %>
				<%= " followed  "  %>
				<%= link_to activity['object'].slug , activity['object']%>

				<a href="#" class="thumbnail">
					<%= image_tag(activity['object'].image, :alt => activity['object']) %>
				</a>
				<% end %>
				<% if activity['verb'] == 'Comment' %>
				<%= link_to activity['actor'].slug , activity['actor'] %>
				<%= " commented " %>
				<%= link_to activity['object'].recipe.user.slug , activity['object'].recipe.user%>
				<%="\'s recipe : \'" %>
				<%= link_to activity['object'].recipe.name , activity['object'].recipe %>
				<%= " \'" %>
				<a href="#" class="thumbnail">
					<%= image_tag(activity['object'].recipe.image, :alt => activity['object'].recipe) %>
				</a>
				<% end %>
				<%= time_ago_in_words(activity['object'].created_at)  + " ago"%>
				<br></br>
			</div>

			<% end %>

		</div>
	</div>

</div>

<% else %>



<div class="col-md-10 ">
	<h1> Homepage </h1>

</div>
<div id="countdown"> </div>
<button id="startButton", class="btn btn-default">Start</button>
<button id="pauseButton", class="btn btn-default">Pause</button>
<% end %>
