<!DOCTYPE html>
<html>
<head>
  <title>LDSO</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= include_gon %>
<div class="wrapper">
  <nav class="navbar navbar-inverse">
    <div class="navbar-header">
      <button type = "button" class = "navbar-toggle" data-toggle = "collapse" data-target="#navbar-collapse">
        <span class = "sr-only">Toggle navigation</span>
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
      </button>
      <%= link_to "InstaChef", root_path, id: "logo", class: "navbar-brand" %>
    </div>
    <div class = "collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Submit recipe",   new_recipe_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li><%= link_to current_user.name %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
            <li class="dropdown login">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
              <ul id="login-dp" class="dropdown-menu">
                <li>
                  <div class="row">
                    <div class="col-md-12">
                      Login via
                      <div class="social-buttons">
                        <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
                        <a href="#" class="btn btn-ig"><i class="fa fa-instagram"></i> Instagram</a>
                      </div>
                      or
                      <br>
                      <div class="login-nav">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="form-group">
                              <%= f.text_field :login, autofocus: true, class: 'form-control', :placeholder => 'Username or Email'%>
                              <div class="form-group">
                                <%= f.password_field :password, autocomplete: "off", class: 'form-control', :placeholder => 'Password'%>
                              </div>
                              <%= link_to "Forgot the password?", new_user_session_path, :class => "help-block text-right"%>
                              <% if devise_mapping.rememberable? -%>
                                  <div class="form-group">
                                    <%= f.check_box :remember_me %>
                                    <%= f.label :remember_me %>
                                  </div>
                              <% end -%>

                              <%= f.submit "Log in", class: "btn btn-primary btn-block", id: "login" %>
                        <% end %>
                        </div>
                        <div class="bottom text-center">
                          New here? <%= link_to "Join us!", new_user_registration_path %>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
            </li>
            <li><%= link_to "Search", new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <%= yield %>
  <div class="push"> </div>
</div>
<footer>
  <p class="footerInfo"> Â© 2015 INSTACHEF </p>
</footer>
</body>
</html>
